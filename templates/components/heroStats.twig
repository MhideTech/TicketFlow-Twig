{# templates/components/heroStats.twig #}
{% import 'components/_lucide_icon.twig' as icon %}

  <section class="py-20 lg:py-32 bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-4">
          Trusted by Teams Worldwide
        </h2>
        <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
          Join thousands of development teams who rely on TicketFlow for their
          project management and issue tracking needs.
        </p>
      </div>

      <!-- Stats Grid -->
      {% set stats = [
        {
          id: 1,
          icon: 'users',
          value: "10,000+",
          label: "Active Users",
          description: "Development teams worldwide"
        },
        {
          id: 2,
          icon: 'ticket',
          value: "500K+",
          label: "Tickets Processed",
          description: "Successfully resolved issues"
        },
        {
          id: 3,
          icon: 'clock',
          value: "99.9%",
          label: "Uptime",
          description: "Reliable service guarantee"
        },
        {
          id: 4,
          icon: 'star',
          value: "4.9/5",
          label: "User Rating",
          description: "Customer satisfaction score"
        }
      ] %}

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        {% for stat in stats %}
          <div class="text-center group">
            <div
              class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-primary/20 transition-colors duration-300"
            >
              {{ icon.render(stat.icon, 28, 'text-primary') }}
            </div>
            <div class="text-3xl sm:text-4xl font-bold text-foreground mb-2">
              {{ stat.value }}
            </div>
            <div class="text-lg font-semibold text-card-foreground mb-1">
              {{ stat.label }}
            </div>
            <div class="text-sm text-muted-foreground">
              {{ stat.description }}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
