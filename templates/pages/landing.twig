{# templates/pages/landing.twig #}
{% extends 'base.twig' %}
{% import 'components/_lucide_icon.twig' as icon %}

{% block title %}TicketFlow - Smart Ticket Management{% endblock %}

{% block content %}
    <div class="relative bg-gradient-to-br from-green-50 via-white to-blue-50 overflow-hidden">
    {# Animated background blobs #}
    <div class="absolute top-20 right-10 w-64 h-64 bg-green-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"></div>
    <div class="absolute top-40 left-10 w-72 h-72 bg-blue-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000"></div>
    <div class="absolute -bottom-8 right-1/3 w-80 h-80 bg-amber-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-4000"></div>

    <div class="relative max-w-[1440px] mx-auto px-4 sm:px-8 py-20 sm:py-32">
        <div class="text-center">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-gray-900 mb-6">
            Streamline Your
            <span class="text-green-600"> Ticket Management</span>
        </h1>
        <p class="text-lg sm:text-xl text-gray-600 mb-10 max-w-2xl mx-auto">
            Organize, track, and resolve tickets efficiently with our powerful
            management system. Built for teams who value simplicity and productivity.
        </p>

        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <a href="/register" class="inline-flex items-center px-6 py-3 text-base font-medium text-white bg-green-600 rounded-lg hover:bg-green-700 transition-colors shadow-lg hover:shadow-xl">
                Get Started
                {{ icon.render('arrow-right', 28, 'ml-2 w-5 h-5') }}
            </a>

            <a href="/login"
            class="inline-flex items-center px-6 py-3 text-base font-medium text-gray-700 bg-white rounded-lg hover:bg-gray-50 transition-colors border-2 border-gray-200">
            Login
            </a>
        </div>
        </div>

        <div class="mt-20 grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-shadow p-6 border border-gray-100">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            {{ icon.render('check-circle-2', 28, 'w-6 h-6 text-green-600') }}
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Easy Tracking</h3>
            <p class="text-gray-600">
            Keep track of all your tickets in one place with intuitive status updates
            and priority management.
            </p>
        </div>

        <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-shadow p-6 border border-gray-100">
            <div class="w-12 h-12 bg-amber-100 rounded-lg flex items-center justify-center mb-4">
            {{ icon.render('clock', 28, 'w-6 h-6 text-amber-600') }}
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Real-time Updates</h3>
            <p class="text-gray-600">
            Get instant updates on ticket status changes and never miss important developments.
            </p>
        </div>

        <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-shadow p-6 border border-gray-100">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
            {{ icon.render('trending-up', 28, 'w-6 h-6 text-blue-600') }}
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Detailed Analytics</h3>
            <p class="text-gray-600">
            Gain insights into your ticket resolution patterns with comprehensive dashboard statistics.
            </p>
        </div>
        </div>
    </div>

    <svg class="absolute bottom-0 left-0 w-full h-24 sm:h-32"
        viewBox="0 0 1440 120"
        preserveAspectRatio="none"
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true">
        <path d="M0,64L48,69.3C96,75,192,85,288,80C384,75,480,53,576,48C672,43,768,53,864,58.7C960,64,1056,64,1152,58.7C1248,53,1344,43,1392,37.3L1440,32L1440,120L1392,120C1344,120,1248,120,1152,120C1056,120,960,120,864,120C768,120,672,120,576,120C480,120,384,120,288,120C192,120,96,120,48,120L0,120Z"
            fill="#ffffff"/>
    </svg>
    </div>

    {% include 'components/heroFeatures.twig' %}
    {% include 'components/heroStats.twig' %}
{% endblock %}
